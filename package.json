{
  "name": "cringe-vote",
  "version": "0.0.0",
  "description": "application for voting on reddit cringe",
  "main": "./lib/index.js",
  "scripts": {
    "build": "tsc",
    "buildTest": "tsc --p tsconfig.test.json",
    "test": "npm run buildTest && jest --coverage",
    "clean": "rm -rf coverage/* lib/*",
    "lint": "eslint 'src/**/*.ts'",
    "fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write src/*.ts",
    "createMigration": "db-migrate create",
    "migrateUp": "db-migrate up",
    "start": "npm run build && node ./lib/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snoretrain/cringe-vote.git"
  },
  "author": "David Sornberger <snoretrain@github.com>",
  "license": "ISC",
  "dependencies": {
    "death-adder": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.0.1",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.6.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "<rootDir>/lib/**/*.spec.js"
    ],
    "coveragePathIgnorePatterns": [
      "index.js",
      "lib/__tests__"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
